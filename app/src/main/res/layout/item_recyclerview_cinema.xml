<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_recyclerview_cinema_height"
    android:background="@drawable/recyclerview_item_selector"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_cinema_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="同安影剧院"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_medium_size" />

            <TextView
                android:id="@+id/item_tv_cinema_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/item_tv_cinema_name"
                android:text="25.6元起"
                android:textColor="@color/red"
                app:layout_marginLeftPercent="3%" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_tv_cinema_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="同安区环城南路985号"
                android:textSize="@dimen/text_size_14_sp" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/tv_cinema_summer_vacation"
                android:paddingBottom="@dimen/text_summer_vaction_padding_height"
                android:paddingLeft="@dimen/text_summer_vacation_padding_width"
                android:paddingRight="@dimen/text_summer_vacation_padding_width"
                android:paddingTop="@dimen/text_summer_vaction_padding_height"
                android:text="暑期特惠"
                android:textColor="@color/tv_cinema_summber_vacation"
                android:textSize="@dimen/text_size_10_sp" />
        </android.support.percent.PercentRelativeLayout>

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>