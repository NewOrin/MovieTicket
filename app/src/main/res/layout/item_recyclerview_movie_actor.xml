<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_reyclerview_movie_actor_width"
    android:layout_height="@dimen/item_reyclerview_movie_actor_height"
    android:clickable="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/item_recyclerview_movie_actor_padding">

    <ImageView
        android:id="@+id/tv_item_recyclerview_movie_actor_avatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_recyclerview_movie_actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_recyclerview_movie_actor_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="演员姓名"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_14_sp" />
</LinearLayout>