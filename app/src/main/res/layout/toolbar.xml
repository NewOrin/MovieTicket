<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bg"
        android:minHeight="?attr/actionBarSize"
        toolbar:titleTextAppearance="@style/MyToolbarTheme"
        toolbar:titleTextColor="@color/toolbar_title_color">

        <TextView
            android:id="@+id/toolbar_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/ic_arrow_down"
            android:textAppearance="@style/MyToolbarTheme"
            toolbar:titleTextColor="@color/toolbar_title_color" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/toolbar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/tv_margin_5_dp"
        android:text=""
        android:textColor="@color/toolbar_title_color"
        android:textSize="@dimen/text_size_18_sp" />

    <TextView
        android:id="@+id/toolbar_tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/ic_movie_search"
        android:textColor="@color/toolbar_title_color"
        android:textSize="@dimen/text_medium_size" />

</RelativeLayout>